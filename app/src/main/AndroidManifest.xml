<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aras.bioup">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/bioup_logo_transparent"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bioup_logo_transparent"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.BioUp">
        <activity
            android:name=".view.ProfileView.EditProfileActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".view.ProfileView.ProfileActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".view.LeaderboardView.LeaderboardActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".view.GameOverView.GameOverActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".view.SoalView.SoalActivity"
            android:exported="true" />
        <activity
            android:name=".view.PreSoalView.PreSoalActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".view.MateriView.PilihMateriActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".view.RegisterView.RegisterActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".view.LoginView.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".view.SplashView.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aras.bioup.view.HomeView.HomeActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"></activity>
    </application>

</manifest>