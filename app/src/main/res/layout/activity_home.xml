<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    tools:context=".view.HomeActivity">

    <ImageView
        android:id="@+id/img_wave_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_wave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_logo_home"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/bioup_logo_transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_mulai_home"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_radius_white"
        android:text="Mulai"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo_home" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_papan_skor_home"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_radius_white"
        android:text="Papan Skor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_mulai_home"
        app:layout_constraintStart_toStartOf="@+id/btn_mulai_home"
        app:layout_constraintTop_toBottomOf="@+id/btn_mulai_home" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_profil_home"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_radius_white"
        android:text="Profil"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_papan_skor_home"
        app:layout_constraintStart_toStartOf="@+id/btn_papan_skor_home"
        app:layout_constraintTop_toBottomOf="@+id/btn_papan_skor_home" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_keluar_home"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_radius_white"
        android:text="Keluar"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_profil_home"
        app:layout_constraintStart_toStartOf="@+id/btn_profil_home"
        app:layout_constraintTop_toBottomOf="@+id/btn_profil_home" />

</androidx.constraintlayout.widget.ConstraintLayout>